
{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "comments",
    "title": "comments",
    "description": "Base comments definitions",
    "definitions": {
        "post": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "email": {
                    "type": "string",
                    "maxLength": 191
                },
                "body": {
                    "type": "string",
                    "maxLength": 2000
                },
                "post_id": {
                    "type": "string"
                },
                "status": {
                    "type": "string",
                    "enum": ["pending", "published", "hidden", "spam"]
                },
                "updated_at": {
                    "type": ["string", "null"],
                    "format": "date-time"
                },
                "id": {
                    "strip": true
                },
                "uuid": {
                    "strip": true
                },
                "created_at": {
                    "strip": true
                },
                "created_by": {
                    "strip": true
                },
                "updated_by": {
                    "strip": true
                }
            }
        }
    }
}
